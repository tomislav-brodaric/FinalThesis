@model FinalThesis.MVC.ViewModels.VMProductGroup

@{
    ViewData["Title"] = "Product group details";
}

<div class="d-flex justify-content-center">
    <div class="card mt-4 shadow-sm" style="max-width: 600px; width: 100%; border-radius: 10px;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Html.DisplayFor(model => model.GroupName)</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.GroupCode)</dt>
                <dd class="col-sm-6">@Html.DisplayFor(model => model.GroupCode)</dd>

                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.ProductType.TypeName)</dt>
                <dd class="col-sm-6">@Html.DisplayFor(model => model.ProductType.TypeName)</dd>

                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.Note)</dt>
                <dd class="col-sm-6">@Html.DisplayFor(model => model.Note)</dd>
            </dl>

            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="mt-4">
                    <h4>Products in this Group</h4>
                    <ul class="list-group">
                        @foreach (var product in Model.Products)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@product.ProductName (@product.ProductCode)</span>
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@product.IDProduct" class="btn btn-link btn-sm">View</a>
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <p class="mt-3">No products associated with this group.</p>
            }
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>
