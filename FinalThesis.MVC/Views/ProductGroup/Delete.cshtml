@model FinalThesis.MVC.ViewModels.VMProductGroup

@{
    ViewData["Title"] = "Delete product group";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h4>Are you sure you want to delete this product group?</h4>
        </div>
        <div class="card-body">
            <h3>@Html.DisplayFor(model => model.GroupName)</h3>
            <div class="p-3 border rounded">
                <dl class="row">
                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.GroupCode):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.GroupCode)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.ProductType.TypeName):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.ProductType.TypeName)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Note):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Note)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="d-flex justify-content-between mt-3">
                <input type="hidden" asp-for="IDProductGroup" />
                <a asp-action="Index" class="btn btn-secondary">Back to list</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
