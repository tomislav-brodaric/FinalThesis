@model FinalThesis.MVC.ViewModels.VMGiroAccount

@{
    ViewData["Title"] = "Edit giro account";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Editing giro account</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="IDGiroAccount" type="hidden" />

                <div class="mb-3">
                    <label asp-for="AccountName" class="form-label"></label>
                    <input asp-for="AccountName" class="form-control" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Iban" class="form-label"></label>
                    <input asp-for="Iban" class="form-control" placeholder="e.g., HR1210010051778912" />
                    <span asp-validation-for="Iban" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IDBank" class="form-label">Bank</label>
                    <select asp-for="IDBank" class="form-select w-100" asp-items="ViewBag.Banks"></select>
                    <span asp-validation-for="IDBank" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
