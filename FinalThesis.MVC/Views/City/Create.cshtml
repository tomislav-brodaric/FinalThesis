@using Microsoft.AspNetCore.Mvc.Localization
@model FinalThesis.MVC.ViewModels.VMCity

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["AddingNewCity"];
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Localizer["AddingCity"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label class="form-label">@Localizer["Country"]</label>
                    <select asp-for="IDCountry" class="form-select w-100" asp-items="ViewBag.CountryList"></select>
                    <span asp-validation-for="IDCountry" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["CityName"]</label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["CityTaxCode"]</label>
                    <input asp-for="CityTaxCode" class="form-control w-50" placeholder="e.g., 12345" />
                    <span asp-validation-for="CityTaxCode" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">@Localizer["LowerTaxRate"]</label>
                            <div class="input-group">
                                <input asp-for="LowerTaxRate" class="form-control w-50" type="number" step="0.01" min="0" max="99.99" placeholder="e.g., 25.50" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="LowerTaxRate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">@Localizer["HigherTaxRate"]</label>
                            <div class="input-group">
                                <input asp-for="HigherTaxRate" class="form-control w-50" type="number" step="0.01" min="0" max="99.99" placeholder="e.g., 35.40" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="HigherTaxRate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["IBANForTax"]</label>
                    <input asp-for="IbanForTax" class="form-control" placeholder="e.g., HR1210010051778912" />
                    <span asp-validation-for="IbanForTax" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["ZipCode"]</label>
                    <input asp-for="ZipCode" class="form-control w-50" placeholder="e.g., 10000" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">@Localizer["DistFromHQ"]</label>
                            <div class="input-group">
                                <input asp-for="DistanceInKilometres" class="form-control w-50" type="number" min="0" placeholder="e.g., 150" />
                                <span class="input-group-text">km</span>
                            </div>
                            <span asp-validation-for="DistanceInKilometres" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">@Localizer["LocalTaxRate"]</label>
                            <div class="input-group">
                                <input asp-for="LocalTaxRate" class="form-control w-50" type="number" step="0.01" min="0" max="99.99" placeholder="e.g., 1.25" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="LocalTaxRate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Model.ReturnUrl" class="btn btn-secondary">@Localizer["Back"]</a>
                    <button type="submit" class="btn btn-primary">@Localizer["Add"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
