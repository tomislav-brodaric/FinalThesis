@using Microsoft.AspNetCore.Mvc.Localization
@model FinalThesis.MVC.ViewModels.VMAdvanceInvoice

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Delete Advance Invoice";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 800px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h4>@Localizer["AreYouSure"]</h4>
        </div>
        <div class="card-body">
            <h3>@Html.DisplayFor(model => model.AdvanceInvoiceNumber)</h3>
            <div class="p-3 border rounded">
                <dl class="row">
                    <dt class="col-sm-7">@Localizer["AdvInvDate"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.AdvanceInvoiceDate)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Partner):</dt>
                    <dd class="col-sm-5">@Model.Partner?.PartnerName</dd>

                    <dt class="col-sm-7">@Localizer["PurposeDescription"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.PurposeDescription)</dd>

                    <dt class="col-sm-7">@Localizer["InvAmount"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.InvoiceAmount)</dd>

                    <dt class="col-sm-7">@Localizer["TransitionalItem"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.TransitionalItem)</dd>

                    <dt class="col-sm-7">@Localizer["ExemptFromVAT"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.ExemptFromVAT)</dd>

                    <dt class="col-sm-7">@Localizer["Notes"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Notes)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="d-flex justify-content-between mt-3">
                <input type="hidden" asp-for="IDAdvanceInvoice" />
                <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
                <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
