@model FinalThesis.MVC.ViewModels.VMProduct

@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h4>Are you sure you want to delete this product?</h4>
        </div>
        <div class="card-body">
            <h3>@Html.DisplayFor(model => model.ProductName)</h3>
            <div class="p-3 border rounded">
                <dl class="row">
                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.ProductCode):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.ProductCode)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.UnitOfMeasure):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.UnitOfMeasure)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.AdditionalCode):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.AdditionalCode)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Dimensions):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Dimensions)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Weight):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Weight)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Manufacturer):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Manufacturer)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Price):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Price)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.PriceWithVat):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.PriceWithVat)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.AllowancePercentage):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.AllowancePercentage)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Note):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Note)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="d-flex justify-content-between mt-3">
                <input type="hidden" asp-for="IDProduct" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
