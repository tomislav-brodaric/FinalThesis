@model FinalThesis.MVC.ViewModels.VMProduct

@{
    ViewData["Title"] = "Edit product";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Editing product</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="IDProduct" type="hidden" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ProductCode" class="form-label"></label>
                            <input asp-for="ProductCode" class="form-control" placeholder="e.g., PRD123" />
                            <span asp-validation-for="ProductCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label"></label>
                            <input asp-for="ProductName" class="form-control" placeholder="e.g., Product Name" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductDescription" class="form-label"></label>
                    <textarea asp-for="ProductDescription" class="form-control" rows="3" placeholder="Description"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UnitOfMeasure" class="form-label"></label>
                            <input asp-for="UnitOfMeasure" class="form-control" placeholder="e.g., kg, pcs" />
                            <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AdditionalCode" class="form-label"></label>
                            <input asp-for="AdditionalCode" class="form-control" placeholder="Additional Code" />
                            <span asp-validation-for="AdditionalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Dimensions" class="form-label"></label>
                            <input asp-for="Dimensions" class="form-control" placeholder="e.g., 20x30x15" />
                            <span asp-validation-for="Dimensions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label"></label>
                            <input asp-for="Weight" class="form-control" type="number" step="0.01" placeholder="e.g., 1.5" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Manufacturer" class="form-label"></label>
                    <input asp-for="Manufacturer" class="form-control" placeholder="e.g., Manufacturer Name" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="e.g., 100.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PriceWithVat" class="form-label"></label>
                            <input asp-for="PriceWithVat" class="form-control" type="number" step="0.01" placeholder="e.g., 120.00" />
                            <span asp-validation-for="PriceWithVat" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AllowancePercentage" class="form-label"></label>
                            <input asp-for="AllowancePercentage" class="form-control" type="number" step="0.01" placeholder="e.g., 5.00" />
                            <span asp-validation-for="AllowancePercentage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PriceInForeignCurrency" class="form-label"></label>
                            <input asp-for="PriceInForeignCurrency" class="form-control" type="number" step="0.01" placeholder="Foreign currency price" />
                            <span asp-validation-for="PriceInForeignCurrency" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="AdditionalPriceA" class="form-label"></label>
                            <input asp-for="AdditionalPriceA" class="form-control" type="number" step="0.01" placeholder="Price A" />
                            <span asp-validation-for="AdditionalPriceA" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="AdditionalPriceB" class="form-label"></label>
                            <input asp-for="AdditionalPriceB" class="form-control" type="number" step="0.01" placeholder="Price B" />
                            <span asp-validation-for="AdditionalPriceB" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="AdditionalPriceC" class="form-label"></label>
                            <input asp-for="AdditionalPriceC" class="form-control" type="number" step="0.01" placeholder="Price C" />
                            <span asp-validation-for="AdditionalPriceC" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="AdditionalPriceD" class="form-label"></label>
                            <input asp-for="AdditionalPriceD" class="form-control" type="number" step="0.01" placeholder="Price D" />
                            <span asp-validation-for="AdditionalPriceD" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="BaseMeasurementUnit" class="form-label"></label>
                    <input asp-for="BaseMeasurementUnit" class="form-control" placeholder="Base Unit" />
                    <span asp-validation-for="BaseMeasurementUnit" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Index" class="form-label"></label>
                            <input asp-for="Index" class="form-control" type="number" step="0.01" placeholder="Index value" />
                            <span asp-validation-for="Index" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BaseUnitPrice" class="form-label"></label>
                            <input asp-for="BaseUnitPrice" class="form-control" type="number" step="0.01" placeholder="Base unit price" />
                            <span asp-validation-for="BaseUnitPrice" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TaxNumberID" class="form-label">Tax Number</label>
                            <select asp-for="TaxNumberID" class="form-select" asp-items="ViewBag.TaxNumberList">
                                <option value="">Select Tax Number</option>
                            </select>
                            <span asp-validation-for="TaxNumberID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ProductGroupID" class="form-label">Product Group</label>
                            <select asp-for="ProductGroupID" class="form-select" asp-items="ViewBag.ProductGroupList">
                                <option value="">Select Product Group</option>
                            </select>
                            <span asp-validation-for="ProductGroupID" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Note" class="form-label"></label>
                    <textarea asp-for="Note" class="form-control" rows="3" placeholder="Additional notes"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
