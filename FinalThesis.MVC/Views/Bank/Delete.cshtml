@using Microsoft.AspNetCore.Mvc.Localization
@model FinalThesis.MVC.ViewModels.VMBank

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["DeletingBank"];
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h4>@Localizer["AreYouSure"]</h4>
        </div>
        <div class="card-body">
            <h3>@Html.DisplayFor(model => model.BankName)</h3>
            <div class="p-3 border rounded">
                <dl class="row">
                    <dt class="col-sm-7">@Localizer["BankAddress"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.BankAddress)</dd>

                    <dt class="col-sm-7">@Localizer["BankOIB"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.BankOib)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.IBAN):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.IBAN)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.Swift):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.Swift)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="d-flex justify-content-between mt-3">
                <input type="hidden" asp-for="IDBank" />
                <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
