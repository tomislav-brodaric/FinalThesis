@using Microsoft.AspNetCore.Mvc.Localization
@model FinalThesis.MVC.ViewModels.VMBank

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["BankDetails"];
}

<div class="d-flex justify-content-center">
    <div class="card mt-4 shadow-sm" style="max-width: 600px; width: 100%; border-radius: 10px;">
        <div class="card-header bg-primary text-white" style="border-radius 10px 10px 0 0;">
            <h3 class="mb-0">@Html.DisplayFor(model => model.BankName)</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">@Localizer["BankAddress"]</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BankAddress)</dd>

                <dt class="col-sm-4">@Localizer["BankOIB"]</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BankOib)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IBAN)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IBAN)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Swift)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Swift)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
        </div>
    </div>
</div>