@model FinalThesis.MVC.ViewModels.VMPDVExemption

@{
    ViewData["Title"] = "Edit PDV Exemption";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Editing PDV Exemption</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="IDExemption" type="hidden" />

                <div class="mb-3">
                    <label asp-for="ClauseCode" class="form-label"></label>
                    <input asp-for="ClauseCode" class="form-control" />
                    <span asp-validation-for="ClauseCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ClauseName" class="form-label"></label>
                    <input asp-for="ClauseName" class="form-control" />
                    <span asp-validation-for="ClauseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BasisID" class="form-label">Basis</label>
                    <select asp-for="BasisID" class="form-select w-100" asp-items="ViewBag.BasisList"></select>
                    <span asp-validation-for="BasisID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ClauseText" class="form-label"></label>
                    <textarea asp-for="ClauseText" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="ClauseText" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
