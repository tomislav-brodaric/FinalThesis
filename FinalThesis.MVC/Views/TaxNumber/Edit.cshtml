@model FinalThesis.MVC.ViewModels.VMTaxNumber

@{
    ViewData["Title"] = "Edit tax number";
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Editing tax number</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="IDTaxNumber" type="hidden" />

                <div class="mb-3">
                    <label asp-for="TaxCode" class="form-label"></label>
                    <input asp-for="TaxCode" class="form-control" />
                    <span asp-validation-for="TaxCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxRateID" class="form-label">Tax Rate</label>
                    <select asp-for="TaxRateID" class="form-select w-100" asp-items="ViewBag.TaxRateList"></select>
                    <span asp-validation-for="TaxRateID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxRatePercentage" class="form-label"></label>
                    <input asp-for="TaxRatePercentage" class="form-control w-50" type="number" min="0" max="100" step="0.01" placeholder="e.g., 25.00" />
                    <span asp-validation-for="TaxRatePercentage" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
