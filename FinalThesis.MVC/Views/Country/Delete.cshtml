@using Microsoft.AspNetCore.Mvc.Localization
@model FinalThesis.MVC.ViewModels.VMCountry

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["DeletingCountry"];
}

<div class="d-flex justify-content-center">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h4>@Localizer["AreYouSure"]</h4>
        </div>
        <div class="card-body">
            <h3>@Html.DisplayFor(model => model.ShortNameHr)</h3>
            <div class="p-3 border rounded">
                <dl class="row">
                    <dt class="col-sm-7">@Localizer["OfficialName"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.DisplayOfficialNameHr)</dd>

                    <dt class="col-sm-7">@Localizer["CountryNameEng"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.ShortNameEn)</dd>

                    <dt class="col-sm-7">@Localizer["OfficialNameEng"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.DisplayOfficialNameEn)</dd>

                    <dt class="col-sm-7">@Localizer["TwoLettersCode"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.TwoLetterCode)</dd>

                    <dt class="col-sm-7">@Localizer["ThreeLettersCode"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.ThreeLetterCode)</dd>

                    <dt class="col-sm-7">@Localizer["NumericCode"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.NumericCode)</dd>

                    <dt class="col-sm-7">@Localizer["Note"]:</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.DisplayNote)</dd>

                    <dt class="col-sm-7">@Html.DisplayNameFor(model => model.IsEUmember):</dt>
                    <dd class="col-sm-5">@Html.DisplayFor(model => model.IsEUmember)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="d-flex justify-content-between mt-3">
                <input type="hidden" asp-for="IDCountry" />
                <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
                <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
